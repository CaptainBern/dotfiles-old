[module/date]
type = internal/date

interval = 5.0

date = "%a %d %b"

format = <label>
format-prefix = " "
format-underline = ${colors.purple}
format-padding = 2 

label = %date%

[module/time]
type = internal/date

interval = 30.0

time = "%H:%M"

format = <label>
format-prefix = " "
format-underline = ${colors.aqua}
format-padding = 2

label = %time%

[module/powermenu]
type = custom/text

